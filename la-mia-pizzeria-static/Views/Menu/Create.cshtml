@model Pizza

<h1>Create</h1>

<div class="container">
    <form asp-controller="Menu" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="Nome" class="d-block w-100" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Desctizione:</strong>
            <textarea asp-for="Descrizione" class="d-block w-100"></textarea>
            <span asp-validation-for="Descrizione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>URL Immagine:</strong>
            <input asp-for="Image" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Price:</strong>
            <input asp-for="Price" class="d-block w-100" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
</div>